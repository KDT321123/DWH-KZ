{
  "name": "@sap/generator-fiori-deployment",
  "displayName": "SAP Fiori Tools – Generators for deployment artifacts",
  "version": "1.6.6",
  "description": "SAP Fiori Tools – Generators for deployment artifacts",
  "publisher": "SAPSE",
  "license": "SEE LICENSE IN LICENSE",
  "private": false,
  "main": "generators/index.js",
  "keywords": [
    "yeoman-generator"
  ],
  "scripts": {
    "watch": "yarn clean && tsc --build ./ --pretty --watch",
    "build:deps": "yarn lerna run --concurrency 1 --no-bail --stream --scope @sap/ux-telemetry --scope @sap/ux-generator-common --scope @sap/ux-odata-client build",
    "bundle:dev": "yarn build:deps && yarn watch && npm pack",
    "clean:dist": "rimraf ./dist ./generators *.tsbuildinfo",
    "clean": "rimraf ./reports",
    "compile": "tsc --build ./ --pretty ",
    "build": "npm-run-all clean compile",
    "test": "jest --maxWorkers=1 --ci --forceExit --detectOpenHandles",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:summary": "eslint . --ext .ts,.tsx -f summary",
    "lint:fix": "eslint --fix",
    "lint:fix:all": "eslint . --ext .ts,.tsx --fix",
    "lint:report": "eslint . --ext .ts,.tsx -f multiple ",
    "format:fix": "prettier --write --loglevel silent --ignore-path ../../.prettierignore",
    "format:fix:all": "prettier --write '**/*.{css,scss,html,js,json,ts,tsx,yaml,yml}' '!**/{out,dist,typings,node_modules}/**' '!**/*.{svg,png,xml}' --ignore-path ../../.prettierignore",
    "pre-commit": "lint-staged --quiet",
    "madge": "madge --warning --circular --extensions ts ./ || gulp show-madge-banner"
  },
  "dependencies": {
    "@sap-devx/yeoman-ui-types": "1.0.2",
    "@sap/cf-tools": "2.1.1",
    "@sap/mta-lib": "1.7.0",
    "@sap/ux-i18n-properties": "1.6.6",
    "chalk": "4.1.0",
    "dotenv": "8.2.0",
    "ejs": "3.1.8",
    "find-up": "4.1.0",
    "hasbin": "1.2.3",
    "i18next": "19.0.2",
    "js-yaml": "3.14.0",
    "temp-dir": "2.0.0",
    "yeoman-generator": "5.4.2"
  },
  "devDependencies": {
    "@sap/ux-cds": "1.6.6",
    "@sap/ux-common-utils": "1.6.6",
    "@sap/ux-generator-common": "1.6.6",
    "@sap/ux-odata-client": "1.6.6",
    "@sap/ux-project-access": "1.6.6",
    "@sap/ux-telemetry": "1.6.6",
    "@types/fs-extra": "5.0.2",
    "@types/jest": "26.0.23",
    "@types/js-yaml": "3.12.4",
    "@types/lodash": "4.14.149",
    "@types/lodash.get": "4.4.6",
    "@types/node": "14.14.31",
    "@types/yeoman-environment": "2.10.5",
    "@types/yeoman-generator": "5.2.7",
    "fs-extra": "8.1.0",
    "lodash": "4.17.21",
    "memfs": "3.2.0",
    "typescript": "3.8.3",
    "unionfs": "4.4.0",
    "yeoman-test": "6.2.0"
  },
  "files": [
    "generators",
    "templates"
  ],
  "jestSonar": {
    "reportPath": "reports/test/unit",
    "reportFile": "test-report.xml"
  },
  "eslint-formatter-multiple": {
    "formatters": [
      {
        "name": "stylish",
        "output": "console"
      },
      {
        "name": "json",
        "output": "file",
        "path": "reports/lint/eslint.json"
      },
      {
        "name": "checkstyle",
        "output": "file",
        "path": "reports/lint/eslint.checkstyle.xml"
      }
    ]
  }
}
